@model FriendModel

<form method="post" action="/friends/update">
    <div class="row">
        <div class="col-1">
            <input class="form-control" name="Id" value="@Model.Id" readonly/>
        </div>
        <div class="col">
            <div class="input-group flex-nowrap">
                <span class="input-group-text">Имя</span>
                <input name="Name" value="@Model.Name" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="input-group flex-nowrap">
                <span class="input-group-text">Место</span>
                <input name="Place" value="@Model.Place" class="form-control" />
            </div>
        </div>
        <div class="col-auto">
            <input class="btn btn-outline-dark" value="Обновить" type="submit" />
        </div>
    </div>
</form>